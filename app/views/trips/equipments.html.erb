<%= render 'shared/navbar' %>
<%= render 'shared/topbar' %>

<div class="bakko-container">
  <div class="equipment-text">
    <h1 class="equipment-title">BEST EQUIPMENT FOR YOU!</h1>
    <p class="equipment-paragraph">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
  </div>
  <div class="cards">
    <% @activities.each do |activity| %>
      <% activity.equipments.each do |equipment| %>
      <div class="card-activity">
          <div class="equipment-direct">
            <%= link_to equipment_path(equipment) do %>
            <% equipment.materials.each do |material|  %>
            <% if material.photo.attached? %>
              <div class="activity-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
              url(<%= cl_image_path material.photo.key %>)">
            <% else %>
            <div class="activity-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
              url(https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80)">

            <% end %>
            <% end %>
            <div class="card-activity-infos">
              <div class="activity-text">
                <h2> <%= equipment.name %></h2>
                <p><%= equipment.benefits %></p>
              </div>
              <ion-icon name="chevron-forward-outline"></ion-icon>
            <% end %>
          </div>
        </div>
      </div>
    </div>
        <% end %>
    <% end %>
  </div>

  <div class="pass-link">
  <%= link_to "Pass >", new_trip_budget_path(current_user.trips.first)%>
  </div>

</div>
