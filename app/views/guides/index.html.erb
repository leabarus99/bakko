<%= render 'shared/navbar' %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon special-topbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/dashboard">
      <img src="<%= image_path('bakko-white-logo.png')%>">
    </a>
    <button class="navbar-toggler"id="navbarSupportedContent" >
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= image_path('user-profil.jpg')%>">
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/profil">Profil</a>
              <a class="dropdown-item profil-settings" href="#">Settings</a>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
    </button>
  </div>
</div>

<body class="guide-background">

<div class="survival-container">

<div class="survival-title">
<h1>Survival Kit</h1>
</div>

<%= form_tag guides_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an article"
  %>
<% end %>

<div class="sub-title">
<h2>Bakko Guides</h2>
</div>


  <% @guides.each do |guide| %>
    <%= link_to guide_path(guide) do %>
      <div class="card-survival">
        <%= cl_image_tag guide.photo.key %>
        <div class="preview-margins">
          <p class= "guide-title"> <%= guide.title %></p>
            <br>
          <p class= "guide-content"><%= guide.content %> </p>
          <% guide.category %>
        </div>
      </div>
    <% end %>
  <% end %>


</div>
</body>
